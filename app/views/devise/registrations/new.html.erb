<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="t-heade">
    <div class="actions">
      <%= f.submit "Next" %>
    </div>
    <h2>Register</h2>
    <p class="bck"><%= link_to raw('&#8592;'), root_path, class: "bck-link" %></p>
  </div>
  
    <div class="field">
      <%= f.text_field :full_name, placeholder: 'Full Name', autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: "new-password" %>
    </div>
  
  <% end %>
  